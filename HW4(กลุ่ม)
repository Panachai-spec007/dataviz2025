        "# ฟังก์ชันอ่านข้อมูลจากทุกโฟลเดอร์\n",
        "def read_all_data(base_path):\n",
        "    all_dfs = []\n",
        "    months = os.listdir(base_path)\n",
        "\n",
        "    for month in months:\n",
        "        month_path = os.path.join(base_path, month)\n",
        "        if os.path.isdir(month_path):  # ตรวจว่าเป็นโฟลเดอร์จริง ๆ\n",
        "            files = os.listdir(month_path)\n",
        "            for file in files:\n",
        "                if 'stop-and-search' in file and file.endswith('.csv'):\n",
        "                    filepath = os.path.join(month_path, file)\n",
        "                    df = pd.read_csv(filepath)\n",
        "                    city = file.replace('-stop-and-search.csv', '').split('-', 2)[-1]\n",
        "                    df['Police Force'] = city\n",
        "                    all_dfs.append(df)\n",
        "\n",
        "    return all_dfs\n",
        "\n",
        "# ฟังก์ชันนับจำนวนคนเชื้อสายเอเชีย\n",
        "def count_asian_people(all_dfs):\n",
        "    asian_counts = {}\n",
        "\n",
        "    for df in all_dfs:\n",
        "        for i in range(len(df)):\n",
        "            row = df.iloc[i]\n",
        "            ethnicity = str(row.get('Self-defined ethnicity', ''))\n",
        "            if 'Asian' in ethnicity:\n",
        "                city = row['Police Force']\n",
        "                if city not in asian_counts:\n",
        "                    asian_counts[city] = 0\n",
        "                asian_counts[city] += 1\n",
        "\n",
        "    return asian_counts\n",
        "\n",
        "# เรียกใช้\n",
        "base_path = '/content/drive/MyDrive/Dataviz2025/Data'\n",
        "dataframes = read_all_data(base_path)\n",
        "counts = count_asian_people(dataframes)\n",
        "\n",
        "# หามากที่สุดและน้อยที่สุด\n",
        "if counts:\n",
        "    # หาค่ามากที่สุด/น้อยที่สุด\n",
        "    most_city = max(counts, key=counts.get)\n",
        "    fewest_city = min(counts, key=counts.get)\n",
        "\n",
        "    print(\"\\n=== รายงานการเรียกค้นผู้มีเชื้อสายเอเชีย (รวม 5 เดือน) ===\\n\")\n",
        "\n",
        "    # เรียงลำดับจากมากไปน้อย และแสดงพร้อมเลขลำดับ\n",
        "    for i, city in enumerate(sorted(counts, key=counts.get, reverse=True), start=1):\n",
        "        print(f\"{i:>2}. {city.ljust(20)}: {counts[city]:,} คน\")\n",
        "\n",
        "    print(\"\\n====== สรุป ======\")\n",
        "    print(f\" มากที่สุด  : {most_city} ({counts[most_city]:,} คน)\")\n",
        "    print(f\" น้อยที่สุด : {fewest_city} ({counts[fewest_city]:,} คน)\")\n",
        "else:\n",
        "    print(\"ไม่พบข้อมูลที่เกี่ยวข้องกับผู้มีเชื้อสายเอเชีย\")\n",
        "\n"
